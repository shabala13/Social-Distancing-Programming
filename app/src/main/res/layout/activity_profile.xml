<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/profilename"
        android:layout_width="122dp"
        android:layout_height="35dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="152dp"
        android:layout_marginRight="152dp"
        android:text="Profile"
        android:textSize="30sp"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/emailView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/back_image_button"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="17dp"
        android:text="Email:"
        android:textSize="16sp"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/emailView"
        android:layout_alignLeft="@id/emailView"
        android:layout_marginLeft="81dp"
        android:textSize="16sp"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/pointsView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/emailView"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:text="Points:"
        android:textSize="16sp"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/levelView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pointsView"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="27dp"
        android:text="Level:"
        android:textSize="16sp"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:layout_alignBaseline="@id/pointsView"
        android:layout_alignLeft="@id/email"
        android:textSize="16sp"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/points"
        android:layout_alignBaseline="@id/levelView"
        android:layout_alignStart="@+id/points"
        android:layout_alignLeft="@+id/points"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="24dp"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/requests"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        android:text="Requests:"
        android:textSize="30sp"
        android:textColor="@color/colorPrimaryDark" />

    <ScrollView
        android:id="@+id/scroller"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/requests"
        android:layout_marginTop="59dp">

        <ListView
            android:id="@+id/requestList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>

    <ImageButton
        android:id="@+id/back_image_button"
        android:layout_width="48dp"
        android:layout_height="44dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:tint="#454040"
        app:srcCompat="@drawable/abc_vector_test" />

    <TextView
        android:id="@+id/requestName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/requests"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="19dp"
        android:text="Item Name"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/requestTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/requests"
        android:layout_marginStart="72dp"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="19dp"
        android:layout_toEndOf="@+id/requestName"
        android:layout_toRightOf="@+id/requestName"
        android:text="Time"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/requestTime2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/requests"
        android:layout_marginStart="205dp"
        android:layout_marginLeft="205dp"
        android:layout_marginTop="19dp"
        android:layout_toEndOf="@+id/requestName"
        android:layout_toRightOf="@+id/requestName"
        android:text="Date"
        android:textSize="16sp" />

</RelativeLayout>